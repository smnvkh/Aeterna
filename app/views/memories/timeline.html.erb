<h1>Лента времени</h1>

<div class="timeline">
  <% @memories_by_year.each do |year, memories| %>
    <div class="timeline-year">
      <h2><%= year %></h2>

      <% memories.each do |memory| %>
        <div class="timeline-item">
          <h3><%= memory.family_member.name %> (<%= memory.family_member.relation %>)</h3>
          
          <div class="memory-image">
            <%= image_tag memory.image.url, width: 300 %>
          </div>

          <p><%= l(memory.date, format: :long) %></p>
          <p><%= memory.body %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
