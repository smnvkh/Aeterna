<%
  set_meta_tags(
    title: @memory_name,
    description: "Воспоминание твоей семьи",
    keywords: "family, memory",
    og: {
      title: @memory_name,
      type: "website",
      url: memory_url(@memory)
    }
  )
%>

<section class="ShiftLeft">
  <p style="color: green"><%= notice %></p>
  
  <%= render @memory %>
  
  <div>
    <%= link_to "Edit this memory", edit_memory_path(@memory) %> |
    <%= link_to "Back to memories", timeline_path %>
  
    <%= link_to "Destroy this memory", @memory, data: { turbo_stream: false, turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
  
  <h2>Add a comment:</h2>
  <%= render "comments/form" %>
  
  <h2>
    <%= @memory.comments.count %>
    <%= I18n.translate 'comment', count: @memory.comments.count %>
  </h2>
  <%= render @memory.comments %>
</section>